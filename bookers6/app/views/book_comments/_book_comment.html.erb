<% @book.book_comments.each do |book_comment| %>
  <%= image_tag book_comment.user.get_profile_image, size:'50x50' %>
  <%= book_comment.user.name %>

  <% if book_comment.user == current_user %>
    <%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true %>
  <% end %>

  <p><%= book_comment.comment %></p>
<% end %>

<%= form_with model: [@book, @book_comment], local: false do |f| %>
  <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %><br>
  <%= f.submit "送信" %>
<% end %>